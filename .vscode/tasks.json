{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Run Smart CPP",
      "type": "shell",
      // This script finds the most recently changed .cpp file in the folder
      "command": "CPP_FILE=$(ls -t *.cpp | head -n 1) && g++ \"$CPP_FILE\" -o \"output_bin\" && ./output_bin < input.txt > output.txt",
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "presentation": {
        "reveal": "never",
        "panel": "shared",
        "focus": false,
        "echo": false
      },
      "problemMatcher": "$gcc"
    }
  ]
}
